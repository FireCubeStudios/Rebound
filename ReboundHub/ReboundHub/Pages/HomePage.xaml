                        <TextBlock Text="Open:" TextWrapping="WrapWholeWords" Margin="25, 113, 15, 15"/>
                        <Grid Background="{ThemeResource ControlFillColorInputActive}" BorderBrush="{ThemeResource TextControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Margin="120, -30, 25, 0" Height="32">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Background="{ThemeResource AccentFillColorSelectedTextBackgroundBrush}" Margin="12, 0">
