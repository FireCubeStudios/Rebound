                        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.7" CornerRadius="8"/>
                        <TextBlock Text="Go to..." Margin="10, 6"/>
                        <FontIcon Glyph="" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Opacity="0.5"/>
                        <StackPanel Margin="25, 45, 25, 25">
                            <ivirius:CommandLink Title="Rebound 11" Description="Windows 11 but fluent."/>
