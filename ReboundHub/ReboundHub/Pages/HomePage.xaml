                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
            <Border VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="2">
