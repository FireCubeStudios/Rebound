                            </Grid>
                            <FontIcon Glyph="&#xE011;" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.5" Margin="12, 0" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </Grid>
                        <TextBlock Text="Arguments:" TextWrapping="WrapWholeWords" Margin="25, 153, 15, 15"/>
