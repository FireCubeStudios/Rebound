        </StackPanel>
        <Grid Background="#66FFFFFF" Width="90" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45, 200" CornerRadius="4">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="-2, 0, 0, 3">
                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" OffsetY="1" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="Recycle Bin" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="Recycle Bin" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="Recycle Bin" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
            </Grid>
        </Grid>
        <Grid Width="90" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45, 300, 0, 100" CornerRadius="4">
