            <Grid Background="#10000000" Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="#77777777" BorderThickness="1" CornerRadius="8" Background="#FFFFFF">
                    <Grid>
                        <TextBlock Text="From the old and rusty..." Margin="10, 6"/>
                        <FontIcon Glyph="" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
                        <Border Background="#F0F0F0" Height="62" VerticalAlignment="Bottom"/>
                        <StackPanel Spacing="8" Margin="12, 20" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Border Background="#FFFFFF" BorderBrush="#0078d4" BorderThickness="1" CornerRadius="4" Width="80" Height="24">
                                <TextBlock Text="OK" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI"/>
                            </Border>
                            <Border Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Width="80" Height="24">
                                <TextBlock Text="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI"/>
                            </Border>
                            <Border Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Width="80" Height="24">
                                <TextBlock Text="Browse..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Type the name of a program, folder, document, or Internet resource, and Windows will open it for you." FontSize="13" TextWrapping="WrapWholeWords" Margin="80, 40, 15, 15"/>
                        <TextBlock Text="Open:" FontSize="13" TextWrapping="WrapWholeWords" Margin="15, 97, 15, 15"/>
                        <Border Background="#FFFFFF" BorderBrush="#0078d4" BorderThickness="1" CornerRadius="1" Margin="80, 10, 15, 0" Height="24">
                            <Border HorizontalAlignment="Left" VerticalAlignment="Center" Background="#0078d4" Margin="5, 0">
                                <TextBlock Text="dfrgui" Foreground="#FFFFFF" FontSize="13" FontFamily="Segoe UI"/>
                            </Border>
                        </Border>
                        <FontIcon Glyph="&#xE011;" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 103, 18, 0" Foreground="#555555"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="550" Height="350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Width="30" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1">
                <Border.Background>
