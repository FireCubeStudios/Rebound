                RadiusX="1"
                RadiusY="1"
                GradientOrigin="1,0"
                SpreadMethod="Pad">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#10000000" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
            <Border VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="2">
                <Border.Background>
                    <RadialGradientBrush MappingMode="RelativeToBoundingBox" Center="0,0"
                RadiusX="1"
                RadiusY="1"
                GradientOrigin="0,0"
                SpreadMethod="Pad">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#10000000" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
            <Grid Background="#10000000" Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="#77777777" BorderThickness="1" CornerRadius="8" Background="{ThemeResource SystemControlChromeLowAcrylicWindowBrush}">
                    <Grid>
                        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.7" CornerRadius="8"/>
                        <TextBlock Text="...to the new and improved" Margin="10, 6"/>
                        <FontIcon Glyph="" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
                        <Border Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" Height="70" VerticalAlignment="Bottom"/>
                        <StackPanel Spacing="8" Margin="18, 20" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" BorderBrush="{ThemeResource AccentControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Width="145" Height="32">
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" Text="Run" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI" Margin="0, 0, 30, 0"/>
                                    <FontIcon Glyph="&#xE011;" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                    <Border Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}" Width="1" HorizontalAlignment="Right" Opacity="0.5" Margin="35, 0"/>
                                </Grid>
                            </Border>
                            <Border Background="{ThemeResource ControlFillColorDefault}" BorderBrush="{ThemeResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Width="145" Height="32">
                                <TextBlock Text="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            </Border>
                            <Border Background="{ThemeResource ControlFillColorDefault}" BorderBrush="{ThemeResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Width="145" Height="32">
                                <TextBlock Text="Browse..." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            </Border>
