                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" OffsetY="1" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="New Folder" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="New Folder" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
                <ToolkitControls:DropShadowPanel BlurRadius="3" OffsetX="0" ShadowOpacity="1" FontWeight="Bold"  Color="#000000">
                    <TextBlock Text="New Folder" FontSize="14" FontWeight="Light" Foreground="White"/>
                </ToolkitControls:DropShadowPanel>
            </Grid>
        </Grid>
        <Grid RequestedTheme="Light" BorderThickness="2" BorderBrush="{ThemeResource AccentFillColorDefaultBrush}" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Width="90" Height="80" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="45, 200" CornerRadius="4">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="-2, 0, 0, 3">
                <ToolkitControls:DropShadowPanel BlurRadius="15" OffsetX="0" OffsetY="1" ShadowOpacity="1" FontWeight="Bold"  Color="#222222">
