<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ReboundHub.RegionBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReboundHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Image x:Name="RegionBkg" Stretch="UniformToFill"/>
        <ContentDialog x:Name="BlockDialog" Title="Unable to open Rebound Hub." Content="This content is not available in your region." CloseButtonText="Close"/>
    </Grid>
</Window>
